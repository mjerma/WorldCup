<UserControl x:Class="WPF.UserControls.PlayerControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WPF.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="120" d:DesignWidth="100">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="10"/>
            <RowDefinition Height="10"/>
        </Grid.RowDefinitions>
        <Button x:Name="btnPlayer" Height="80" Width="80" Background="Transparent" Click="btnPlayer_Click">
            <Image x:Name="imgPlayer" Grid.Row="0" Source="/Images/playerDefault.jpg" Stretch="Fill"/>
        </Button>
        <TextBlock x:Name="tbPlayer" Grid.Row="1" FontSize="10" Foreground="#ffbb00" Text="MIRIC" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <TextBlock x:Name="tbShirtNumber" Grid.Row="2" FontSize="10" Foreground="#ffbb00" Text="27" HorizontalAlignment="Center" VerticalAlignment="Center"/>
    </Grid>
</UserControl>
